<%= form_for([@muz, @muz.comments.build]) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	
	<div class="form-group">
		<%= f.text_area :content, class: "form-control comment-input", placeholder: "Comment..", row: "1"%>
	</div>
	
	<div class="form-group pull-right"><%= f.submit "Add Comment", class: "btn addcomment btn-sm" %></div>
<% end %>